{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "linux-configure",
            "type": "shell",
            "dependsOn":["Prepare Ubuntu"],
            "command": [
                "cd build;",
                "cmake -DUNIX_STRUCTURE=0 -DCMAKE_INSTALL_PREFIX='${workspaceFolder:obs-studio}/build/obs-studio-portable' -DBUILD_BROWSER=ON -DCEF_ROOT_DIR='../../cef_binary_4280_linux64' ..;"
            ]
        },
        {
            "label": "linux-build",
            "dependsOn": [
                "linux-configure"
                
            ],
            "type": "shell",
            "command": [
                "cd build;",
                "make -w -j8 install;"
            ],
            "problemMatcher": []
        },
        {
            "label": "Prepare Ubuntu",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder:obs-studio}"
            },
            "command": [
                "mkdir -p ./build/OBS ;",
                "cd ./build/OBS ;",
                "${workspaceFolder:obs-studio}/CI/install-dependencies-linux.sh;",
            ],
            "problemMatcher": []
        },
        {
            "label": "grab obs-midi",
            "type": "shell",
            "command": [
                "mkdir -p ${workspaceFolder:obs-studio}/build/OBS ;",
                "echo plugins/obs-midi >> ${workspaceFolder:obs-studio}/.git/info/exclude ;",
                "echo plugins/CMakeLists.txt >> ${workspaceFolder:obs-studio}/.git/info/exclude ;",
                "cd ${workspaceFolder:obs-studio}/plugins ;",
                "git clone --recursive https://github.com/cpyarger/obs-midi.git ;",
                "echo 'add_subdirectory(obs-midi)'>>CMakeLists.txt ;"
            ],
            "problemMatcher": []
        }
    ]
}